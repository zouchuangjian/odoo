<odoo>

    <record id="hr_attendance_result_tree_view" model="ir.ui.view">
        <field name="name">打卡结果</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <tree default_order="check_in desc" js_class="dingtalk_attendance_result_class">
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="employee_id"/>
                <field name="work_date" widget="date"/>
                <field name="check_type"/>
                <field name="timeResult"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="check_in"/>
                <field name="sourceType"/>
                <field name="work_month" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_result_form_view" model="ir.ui.view">
        <field name="name">打卡结果</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="employee_id" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="打卡结果">
                            <group>
                                <group>
                                    <field name="work_date"/>
                                    <field name="record_id"/>
                                    <field name="check_type"/>
                                    <field name="timeResult"/>
                                </group>
                                <group>
                                    <field name="locationResult"/>
                                    <field name="baseCheckTime"/>
                                    <field name="check_in"/>
                                    <field name="sourceType"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_result_kanban">
        <field name="name">员工打卡结果看板</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="true">
                <field name="employee_id"/>
                <field name="check_in"/>
                <field name="check_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <img t-att-src="kanban_image('hr.employee', 'image_small', record.employee_id.raw_value)"
                                     t-att-title="record.employee_id.value" t-att-alt="record.employee_id.value" width="24"
                                     height="24" class="oe_kanban_avatar mr4"/>
                                <span class="o_kanban_record_title">
                                    <strong>
                                        <field name="employee_id"/>
                                    </strong>
                                </span>
                                <strong>
                                    <field name="timeResult" widget="label_selection"
                                           options="{'classes': {'NotSigned': 'default', 'Normal': 'success', 'Early': 'warning', 'Late': 'warning', 'SeriousLate': 'warning', 'Absenteeism': 'warning'}}"/>
                                </strong>
                            </div>
                            <hr class="mt4 mb8"/>
                            <div class="o_kanban_record_subtitle">
                                <i class="fa fa-calendar" aria-label="Period" role="img" title="Period"/>
                                <field name="check_type"/>
                                -
                                <field name="check_in"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_result_pivot">
        <field name="name">员工打卡结果列表视图</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <pivot string="考勤透视图">
                <field name="employee_id" type="col"/>
                <field name="check_type" type="row"/>
                <field name="check_in" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_attendance_result_graph" model="ir.ui.view">
        <field name="name">dingding.attendance.graph</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <graph string="员工打卡结果列表报表" stacked="True">
                <field name="employee_id" type="row"/>
                <field name="timeResult" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="hr_attendance_result_calendar" model="ir.ui.view">
        <field name="name">dingding.attendance.calendar</field>
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <calendar string="考勤" date_start="work_date" color="check_type">
                <field name="employee_id"/>
                <field name="timeResult"/>
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_attendance_result_action">
        <field name="name">打卡结果</field>
        <field name="res_model">hr.attendance.result</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="context">{
            'search_default_domain_year': True,
            'search_default_groupby_timeResult': True,
            'search_default_groupby_work_date': False,
            }
        </field>
    </record>

    <record model="ir.ui.view" id="hr_attendance_result_search">
        <field name="model">hr.attendance.result</field>
        <field name="arch" type="xml">
            <search string="员工打卡结果">
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                <field name="employee_id"/>
                <field name="work_date" widget="date"/>
                <field name="check_type"/>
                <field name="timeResult"/>
                <field name="locationResult"/>
                <field name="baseCheckTime"/>
                <field name="check_in"/>
                <field name="sourceType"/>
                <separator/>
                <filter name="groupby_company_id" string="公司" context="{'group_by': 'company_id'}"/>
                <filter name="groupby_timeResult" string="考勤结果" context="{'group_by': 'timeResult'}"/>
                <filter name="groupby_locationResult" string="考勤位置" context="{'group_by': 'locationResult'}"/>
                <filter name="groupby_sourceType" string="数据来源" context="{'group_by': 'sourceType'}"/>
                <separator/>
                <filter name="groupby_employee_id" string="员工" context="{'group_by': 'employee_id'}"/>
                <filter name="groupby_check_type" string="考勤类型" context="{'group_by': 'check_type'}"/>
                <filter name="groupby_work_date" string="工作日" context="{'group_by': 'work_date'}"/>
                <separator/>
                <filter string="我的考勤" name="myattendances" domain="[('employee_id.user_id.id', '=', uid)]"/>
                <filter string="签到日期" name="check_in_filter" date="check_in"/>
                <filter string="近三月内" name="domain_3month" domain="[('work_date','&lt;=', datetime.date.today().strftime('%Y-%m-%d')),('work_date','&gt;=', (context_today()-relativedelta(months=3)).strftime('%Y-%m-%d') )]"/>
                <filter string="近半年内" name="domain_6month" domain="[('work_date','&lt;=', datetime.date.today().strftime('%Y-%m-%d')),('work_date','&gt;=', (context_today()-relativedelta(months=6)).strftime('%Y-%m-%d') )]"/>
                <filter string="当前年内" name="domain_year" domain="[('work_date','&lt;=', time.strftime('%%Y-12-31')),('work_date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                <separator/>
                <searchpanel>
                    <field name="department_id" icon="fa-home" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <menuitem id="hr_attendance_result_menu" name="打卡结果" parent="attendance_menu" sequence="1"
              action="hr_attendance_result_action"/>



    <record id="view_hr_month_attendance_tree" model="ir.ui.view">
        <field name="name">月考勤统计</field>
        <field name="model">hr.month.attendance</field>
        <field name="arch" type="xml">
            <tree default_order="id" editable="top" js_class="calculate_month_attendance_class">
                <field name="company_id" groups="base.group_multi_company" required="1"/>
                <field name="employee_id" required="1"/>
                <field name="month_code" optional="hide"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="normal_count"/>
                <field name="early_count"/>
                <field name="late_count"/>
                <field name="absenteeism_count"/>
                <field name="signed_count"/>
                <field name="overtime_days"/>
                <field name="travel_days"/>
                <field name="leave_days"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_month_attendance_pivot">
        <field name="name">月考勤统计</field>
        <field name="model">hr.month.attendance</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="month_code" type="row"/>
                <field name="employee_id" type="row"/>
                <field name="normal_count" type="measure"/>
                <field name="early_count" type="measure"/>
                <field name="late_count" type="measure"/>
                <field name="absenteeism_count" type="measure"/>
                <field name="signed_count" type="measure"/>
                <field name="overtime_days" type="measure"/>
                <field name="travel_days" type="measure"/>
                <field name="leave_days" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_hr_month_attendance_calendar" model="ir.ui.view">
        <field name="name">hr.month.attendance.calendar</field>
        <field name="model">hr.month.attendance</field>
        <field name="arch" type="xml">
            <calendar string="月考勤统计" date_start="start_date" color="month_code">
                <field name="employee_id"/>
                <field name="month_code"/>
            </calendar>
        </field>
    </record>

    <record id="view_hr_month_attendance_graph" model="ir.ui.view">
        <field name="name">hr.month.attendance.graph</field>
        <field name="model">hr.month.attendance</field>
        <field name="arch" type="xml">
            <graph string="月考勤统计报表" stacked="True">
                <field name="employee_id" type="row"/>
                <field name="month_code" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="view_hr_month_attendance_action">
        <field name="name">月考勤统计</field>
        <field name="res_model">hr.month.attendance</field>
        <field name="view_mode">tree,pivot,calendar,graph,activity</field>
    </record>

    <record model="ir.ui.view" id="hr_month_attendance_search">
        <field name="model">hr.month.attendance</field>
        <field name="arch" type="xml">
            <search string="月考勤统计">
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="employee_id"/>
                <field name="month_code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="normal_count"/>
                <field name="early_count"/>
                <field name="late_count"/>
                <field name="absenteeism_count"/>
                <field name="signed_count"/>
                <field name="overtime_days"/>
                <field name="travel_days"/>
                <field name="leave_days"/>
                <separator/>
                <filter name="groupby_company_id" string="公司" context="{'group_by': 'company_id'}"/>
                <filter string="我的考勤" name="myattendances" domain="[('employee_id.user_id.id', '=', uid)]"/>
                <searchpanel>
                    <field name="department_id" icon="fa-home" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <menuitem id="hr_month_attendance_menu" name="考勤统计" parent="attendance_menu" sequence="2"
              action="view_hr_month_attendance_action"/>



